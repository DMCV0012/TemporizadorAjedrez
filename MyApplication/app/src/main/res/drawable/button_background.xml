<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/button_color_pressed" android:state_pressed="true"/>
    <item android:drawable="@color/button_color_normal" />
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_color_pressed"/> <!-- Color cuando se presiona -->
            <corners android:radius="16dp"/> <!-- Bordes redondeados -->
            <stroke android:width="2dp" android:color="@android:color/black"/> <!-- Borde negro -->
        </shape>
    </item>
    <!-- Estado normal (sin presionar) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_color_normal"/> <!-- Color normal -->
            <corners android:radius="16dp"/> <!-- Bordes redondeados -->
            <stroke android:width="2dp" android:color="@android:color/black"/> <!-- Borde negro -->
        </shape>
    </item>
</selector>